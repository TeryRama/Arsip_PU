

<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2>ðŸ”” Semua Notifikasi</h2>
    <form action="/notifications/mark-all-read" method="POST" style="margin:0;">
      <button class="btn btn-sm btn-outline-primary">Tandai semua dibaca</button>
    </form>
  </div>

  <div class="list-group">
    <% if (notifications && notifications.length) { %>
      <% notifications.forEach(n => { %>
        <div class="list-group-item d-flex justify-content-between align-items-start <%= n.is_read ? '' : 'list-group-item-info' %>">
          <div>
            <div><%= n.message %></div>
            <small class="text-muted"><%= new Date(n.created_at).toLocaleString() %></small>
          </div>
          <div class="ms-2">
            <% if (!n.is_read) { %>
              <form action="/notifications/mark-read/<%= n.id %>" method="POST">
                <button class="btn btn-sm btn-primary">Tandai dibaca</button>
              </form>
            <% } %>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="text-muted p-3">Belum ada notifikasi.</div>
    <% } %>
  </div>
</div>
