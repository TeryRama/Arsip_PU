<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>ğŸ‘¥ Daftar User</h2>
    <a href="/admin/users/add" class="btn btn-primary">â• Tambah User</a>
  </div>
<% if (typeof success !== 'undefined') { %>
  <div class="alert alert-success"><%= success %></div>
<% } %>
<% if (typeof error !== 'undefined') { %>
  <div class="alert alert-danger"><%= error %></div>
<% } %>

  <div class="table-responsive">
    <table class="table table-striped table-bordered align-middle">
      <thead class="table-dark">
        <tr>
          <th>#</th>
          <th>Nama Lengkap</th>
          <th>Username</th>
          <th>Email</th>
          <th>Role</th>
          <th>Notif Email</th>
          <th>Aksi</th>
        </tr>
      </thead>
      <tbody>
        <% if (userList && userList.length) { %>
          <% userList.forEach((u, i) => { %>
            <tr>
              <td><%= i + 1 %></td>
              <td><%= u.nama_lengkap %></td>
              <td><%= u.username %></td>
              <td><%= u.email || '-' %></td>
              <td><%= u.role %></td>
              <td>
                <% if (u.is_email_notif_enabled) { %>
                  âœ… Aktif
                <% } else { %>
                  âŒ Nonaktif
                <% } %>
              </td>
              <td>
                <a href="/admin/user/edit/<%= u.id %>" class="btn btn-warning btn-sm">âœï¸</a>
                <form action="/admin/user/hapus/<%= u.id %>" method="POST" style="display:inline">
                  <button class="btn btn-danger btn-sm" onclick="return confirm('Yakin hapus user ini?')">ğŸ—‘ï¸</button>
                </form>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="7" class="text-center">Belum ada user</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>
