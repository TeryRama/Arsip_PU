<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Daftar Surat Masuk</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container py-5">
    <h2 class="mb-4 text-center">ğŸ“ Daftar Surat Masuk</h2>

    <div class="row mb-4">
      <div class="col-12 col-md-6 mx-auto">
        <input type="text" id="searchInput" class="form-control" placeholder="Cari surat..." />
      </div>
    </div>

    <div class="table-responsive">
      <form method="get" class="mb-3 d-flex align-items-center">
        <label class="me-2">Show</label>
        <select name="limit" class="form-select w-auto me-2" onchange="this.form.submit()">
          <option value="5" <%= selectedLimit == 5 ? 'selected' : '' %>>5</option>
          <option value="10" <%= selectedLimit == 10 ? 'selected' : '' %>>10</option>
          <option value="25" <%= selectedLimit == 25 ? 'selected' : '' %>>25</option>
          <option value="50" <%= selectedLimit == 50 ? 'selected' : '' %>>50</option>
          <option value="100" <%= selectedLimit == 100 ? 'selected' : '' %>>100</option>
        </select>
        <label>entries</label>

        <!-- Hidden inputs untuk mempertahankan filter pencarian -->
        <input type="hidden" name="q" value="<%= searchQuery %>">
        <input type="hidden" name="ditujukan_kepada" value="<%= ditujukan_kepada %>">
      </form>

      <table class="table table-bordered table-striped align-middle">
        <thead class="table-dark text-center">
          <tr>
            <th>No</th>          
            <th>Nomor Surat</th>
            <th>Hal</th>
            <th>Dari</th>
            <th>Ditujukan Kepada</th>
            <th>Tanggal Surat</th>
            <th>Diterima</th>
            <th>Catatan</th>
            <th>File</th>
            <% if (user.role === 'admin') { %>
            <th>Aksi</th> 
            <% } %>
          </tr>
        </thead>
        <tbody id="suratBody">

          <%          suratList.forEach((surat, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= surat.nomor_surat %></td>
              <td><%= surat.hal %></td>
              <td><%= surat.dari %></td>
              <td><%= surat.ditujukan_kepada %></td>
              <td><%= surat.tanggal_surat.toISOString().slice(0, 10) %></td>
              <td><%= surat.tanggal_diterima.toISOString().slice(0, 10) %></td>
              <td><%= surat.catatan || '-' %></td>
              <td class="text-center">
                <!-- <a class="btn btn-sm btn-outline-danger d-flex align-items-center gap-1" 
                   href="/files/<%= surat.nama_file %>" target="_blank" data-bs-toggle="tooltip" 
                   data-bs-placement="top" title="Lihat file PDF">
                        <i class="bi bi-file-earmark-pdf-fill"></i> PDF
                      </a> -->
                <a class="btn btn-sm btn-outline-danger d-flex align-items-center gap-1" 
                   href="/<%= surat.nama_file %>" target="_blank" data-bs-toggle="tooltip" 
                   data-bs-placement="top" title="Lihat file PDF">
                        <i class="bi bi-file-earmark-pdf-fill"></i> PDF
                      </a>
              </td>
              <% if (user.role === 'admin') { %>
              <td>
                <a href="/edit/<%= surat.id %>" class="btn btn-sm btn-warning" title="Edit Surat">âœï¸</a>
                <button class="btn btn-sm btn-danger" onclick="hapusSurat('<%= surat.id %>')" title="Hapus Surat ğŸ—‘ï¸">ğŸ—‘ï¸</button>
              </td>
              <% } %>
            </tr>
          <% }) %>
        </tbody>
      </table>
      <nav class="mt-4">
        <ul class="pagination justify-content-center">
          <% for(let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
              <!-- <a class="page-link" href="/user?page=<%= i %>"><%= i %></a> -->
               <a class="page-link" href="/user?page=<%= i %>&limit=<%= selectedLimit %>&q=<%= searchQuery %>&ditujukan_kepada=<%= ditujukan_kepada %>"><%= i %></a>
            </li>
          <% } %>
        </ul>
      </nav>
    </div>

    <div class="text-center mt-4">
      <% if (user.role === 'admin') { %>
      <a href="/admin" class="btn btn-outline-primary mb-2">
        <i class="bi bi-arrow-left"></i> Kembali ke Admin
      </a>
     
      <a href="/arsip" class="btn btn-outline-primary mb-2">
        Lihat Arsip Dihapus <i class="bi bi-arrow-right"></i>
      </a>
       <% } %>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]')
    const tooltipList = [...tooltipTriggerList].map(el => new bootstrap.Tooltip(el))

    function hapusSurat(id) {
      Swal.fire({
        title: 'Yakin ingin menghapus?',
        text: "Data akan disembunyikan dari daftar.",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonText: 'Ya, hapus!',
        cancelButtonText: 'Batal'
      }).then((result) => {
        if (result.isConfirmed) {
          fetch(`/delete/${id}`, {
            method: 'POST'
          })
          .then(res => {
            if (res.ok) {
              Swal.fire({
                icon: 'success',
                title: 'Berhasil!',
                text: 'Data berhasil dihapus.',
                timer: 2000,
                showConfirmButton: false
              }).then(() => {
                location.reload();
              });
            } else {
              throw new Error('Gagal menghapus data');
            }
          })
          .catch(() => {
            Swal.fire({
              icon: 'error',
              title: 'Gagal!',
              text: 'Data gagal dihapus.'
            });
          });
        }
      });
    }

    const searchInput = document.getElementById('searchInput');
    const suratBody = document.getElementById('suratBody');

    searchInput.addEventListener('input', function () {
      const query = this.value;

      fetch(`/user?q=${encodeURIComponent(query)}`, {
        headers: {
          'X-Requested-With': 'XMLHttpRequest'
        }
      })
      .then(res => res.json())
      .then(data => {
        suratBody.innerHTML = '';

        if (data.length === 0) {
          suratBody.innerHTML = '<tr><td colspan="10" class="text-center">Tidak ada data</td></tr>';
          return;
        }

        data.forEach((surat, index) => {
          const row = `
            <tr>
              <td>${index + 1}</td>
              <td>${surat.nomor_surat}</td>
              <td>${surat.hal}</td>
              <td>${surat.dari}</td>
              <td>${surat.ditujukan_kepada}</td>
              <td>${surat.tanggal_surat.slice(0, 10)}</td>
              <td>${surat.tanggal_diterima.slice(0, 10)}</td>
              <td>${surat.catatan || '-'}</td>
              <td>
                <a class="btn btn-sm btn-outline-danger" href="/${surat.nama_file}" target="_blank">PDF</a>
              </td>
              <td>
                <a href="/edit/${surat.id}" class="btn btn-warning btn-sm">âœï¸</a>
                <button onclick="hapusSurat('${surat.id}')" class="btn btn-danger btn-sm">ğŸ—‘ï¸</button>
              </td>
            </tr>
          `;
          suratBody.insertAdjacentHTML('beforeend', row);
        });
      });
    });
  </script>
</body>
</html>
