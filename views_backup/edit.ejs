<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Edit Surat</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
</head>
<body class="bg-light">
  <div class="container py-5">
    <h2 class="mb-4 text-center">âœï¸ Edit Surat Masuk</h2>

    <form id="editForm">
      <div class="mb-3">
        <label class="form-label">Nomor Surat</label>
        <input type="text" name="nomor_surat" class="form-control" required value="<%= surat.nomor_surat %>">
      </div>

      <div class="mb-3">
        <label class="form-label">Hal</label>
        <input type="text" name="hal" class="form-control" required value="<%= surat.hal %>">
      </div>

      <div class="mb-3">
        <label class="form-label">Surat Dari</label>
        <input type="text" name="dari" class="form-control" required value="<%= surat.dari %>">
      </div>

      <div class="mb-3">
        <label class="form-label">Tanggal Surat</label>
        <input type="date" name="tanggal_surat" class="form-control" required value="<%= surat.tanggal_surat.toISOString().split('T')[0] %>">
      </div>

      <div class="mb-3">
        <label class="form-label">Diterima Tanggal</label>
        <input type="date" name="tanggal_diterima" class="form-control" required value="<%= surat.tanggal_diterima.toISOString().split('T')[0] %>">
      </div>

      <div class="mb-3">
        <label class="form-label">Catatan</label>
        <textarea name="catatan" class="form-control"><%= surat.catatan %></textarea>
      </div>

      <div class="mb-3">
        <label class="form-label">Ditujukan Kepada</label>
        <textarea name="ditujukan_kepada" class="form-control"><%= surat.ditujukan_kepada %></textarea>
      </div>

      <div class="d-grid">
        <button type="submit" class="btn btn-primary">ğŸ’¾ Simpan Perubahan</button>
      </div>
    </form>

    <div class="text-center mt-3">
      <a href="/user" class="btn btn-secondary">â¬…ï¸ Kembali ke Daftar Surat</a>
    </div>
  </div>
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
 <script>
  $('#editForm').on('submit', function (e) {
    e.preventDefault();

    Swal.fire({
      title: 'Yakin ingin menyimpan?',
      text: "Data akan diperbarui di database!",
      icon: 'question',
      showCancelButton: true,
      confirmButtonText: 'Ya, simpan!',
      cancelButtonText: 'Batal',
    }).then((result) => {
      if (result.isConfirmed) {
        $.ajax({
          url: '/edit/<%= surat.id %>',
          type: 'POST',
          data: $('#editForm').serialize(),
          success: function () {
            Swal.fire({
              icon: 'success',
              title: 'Berhasil!',
              text: 'Data berhasil diperbarui.',
              timer: 2000,
              showConfirmButton: false,
                }).then(() => {
                window.location.href = '/user';
            });
          },
          error: function () {
            Swal.fire({
              icon: 'error',
              title: 'Gagal!',
              text: 'Terjadi kesalahan saat menyimpan.',
              confirmButtonText: 'OK'
            });
          }
        });
      }
    });
  });
</script>

</body>
</html>
